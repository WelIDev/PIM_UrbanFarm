@model WebApp.Models.ClienteModel

@{
    Layout = "_Layout";
}
<head>
    <link rel="stylesheet" href="~/css/adicionar.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <title>Clientes</title>
</head>

<div id="adicionar" class="tab">
    <form id="clienteForm">
        <div class="esquerda">
            <h3>Novo Cliente</h3>
            <label for="nomeCompleto">Nome Completo:</label>
            <input type="text" id="nomeCompleto" required>
            <label for="email">E-mail:</label>
            <input type="email" id="email" required>
            <label for="cpf">CPF/CPNJ:</label>
            <input type="text" id="cpf" required>
            <label for="telefone">Número de Telefone:</label>
            <input type="tel" id="telefone" required>
            <label for="dataNascimento">Data de Nascimento:</label>
            <input type="date" id="dataNascimento" required>
        </div>
        <div class="direita">
            <div class="rua-space">
                <label for="rua">Rua:</label>
            </div>
            <input type="text" id="rua" required>
            <label for="cep">CEP:</label>
            <input type="text" id="cep" required>
            <label for="numero">Número:</label>
            <input type="text" id="numero" required>
            <label for="bairro">Bairro:</label>
            <input type="text" id="bairro">
            <label for="cidade">Cidade:</label>
            <input type="text" id="cidade" required>
            <label for="estado">Estado:</label>
            <input type="text" id="estado" required>
            <button type="submit" id="submitButton" class="submit-button">Adicionar Cliente</button>
        </div>
    </form>
</div>

<script src="~/js/gestaodeclientes.js"></script>