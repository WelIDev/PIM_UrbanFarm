@{
    ViewData["Title"] = "UF - Gestão de Pedidos";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/menuprincipal.css" asp-append-version="true">
    <title>@ViewData["Gestão de Pedidos"]</title>
    <link rel="shortcut icon" type="icon" href="~/imagens/celeirourbanfarm.png">
</head>

<header class="top-bar">
    <a href="menuprincipal.html">
        <img class="img-top-bar" src="~/imagens/logonovaurbanfarmpng.png" alt="logoUrbanFarm">
    </a>
    <div class="menu-icon" onclick="toggleSidebar()">&#9776;</div> <!-- Ícone de lista -->
    <div class="profile-icon" onclick="toggleProfileMenu(event)">
        <img class="img-perfil" src="~/imagens/perfil.png" alt="iconePerfil">
    </div> <!-- Ícone de perfil -->
    <div class="profile-menu">
        <ul>
            <li><a href="configuracoes.html">Configurações</a></li>
            <li><a href="login.html">Sair</a></li>
        </ul>
    </div>
</header>

<div class="sidebar">
    <ul>
        <li><a href="@Url.Action("AdicionarCliente","Cliente")">Gestão de Clientes</a></li>
        <li><a href="@Url.Action("AdicionarPedido","Venda")">Gestão de Pedidos</a></li>
        <li><a href="@Url.Action("AdicionarFornecedor","Fornecedor")">Gestão de Fornecedores</a></li>
        <li><a href="@Url.Action("AdicionarUsuario","Usuario")">Gerenciamento de Perfis</a></li>
    </ul>
</div>

<div class="tab-buttons">
    <button class="back-button" onclick="location.href='@Url.Action("MenuPrincipal", "Menu")'">Retornar</button>
</div>

<div class="main-content">
    <div class="container">
        <div class="tabs">
            <button id="tab1" class="tab-button active">Novo Pedido</button>
            <button id="tab2" class="tab-button">Visualização de Pedidos</button>
        </div>

        <div id="carrinho" class="tab-content active">
            <div class="carrinho-container">
                <div class="adicionar-itens">
                    <h3>Adicione itens:</h3>
                    <ul id="produtos"></ul>
                    <button id="finalizar" onclick="finalizarCompra()">Finalizar Compra</button>
                </div>

                <div class="previsao">
                    <h3>Pré-visualização:</h3>
                    <ul id="previsao-list"></ul>
                    <h3 class="total">Total: R$ <span id="total">0.00</span></h3>
                </div>
            </div>
        </div>

        <div id="visualizacao" class="tab-content">
            <h3 class="comprasrealizadas">Compras Realizadas</h3>
            <div class="filtro">
                <label for="busca">Buscar: </label>
                <input type="text" id="busca" oninput="filtrarTabela()">
                <label for="filtro">Filtro: </label>
                <select id="filtro" onchange="filtrarTabela()">
                    <option value="id">ID</option>
                    <option value="data">Data</option>
                    <option value="itens">Itens</option>
                    <option value="valor">Valor Total</option>
                </select>
            </div>
            <table id="visualizacao-tabela">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Data</th>
                    <th>Itens</th>
                    <th>Valor Total</th>
                    <th>Ações</th>
                </tr>
                </thead>
                <tbody>
                <!-- As linhas das compras realizadas serão adicionadas dinamicamente aqui -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Notificações -->
<div id="successNotification" class="notification hidden">Pedido adicionado com sucesso!</div>
<div id="editNotification" class="notification hidden">Pedido editado com sucesso!</div>
<div id="deleteNotification" class="notification hidden">Pedido excluído com sucesso!</div>

<script src="~/js/gestaodepedidos.js" asp-append-version="true"></script>
