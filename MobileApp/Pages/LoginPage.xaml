<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.LoginPage"
             BackgroundColor="{StaticResource PrimaryBackgroundColor}">

    <ContentPage.Content>
        <StackLayout Padding="30" VerticalOptions="Center">
            <Label Text="Bem-vindo!" Style="{StaticResource HeaderLabelStyle}" />
            <Label Text="Por favor, faça login para continuar"
                   Style="{StaticResource SubHeaderLabelStyle}" />

            <Entry x:Name="UsernameEntry" Placeholder="Email"
                   Style="{StaticResource LoginEntryStyle}" />
            <Entry x:Name="PasswordEntry" Placeholder="Senha" IsPassword="True"
                   Style="{StaticResource LoginEntryStyle}" />

            <Button Text="Login" Clicked="OnLoginClicked" Style="{StaticResource LoginButtonStyle}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>